<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--top-->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:tint="#fff" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/promptbolditalic"
            android:text="SORA"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </LinearLayout>

    <!--body-->
    <LinearLayout
        android:id="@+id/search"
        android:layout_below="@id/top"
        android:translationY="-25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shadow"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/search"
            android:tint="#808080"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/promptlight"
            android:hint="Hãy nhập gì đó"
            android:textColor="#000"
            android:backgroundTint="#fff"
            android:textSize="14dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/word_1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/search"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/promptlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ mới"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/background_word"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginVertical="5dp"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <LinearLayout
                android:paddingHorizontal="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Dictionary"
                    android:fontFamily="@font/promptbold"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Từ điển"
                    android:fontFamily="@font/promptlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/word_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/promptlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tục ngữ và thành ngữ"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/background_word"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginVertical="5dp"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <LinearLayout
                android:paddingHorizontal="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Honesty is the best policy"
                    android:fontFamily="@font/promptbold"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Thật thà là thượng sách"
                    android:fontFamily="@font/promptlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>